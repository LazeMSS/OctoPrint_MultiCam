<!-- ko allowBindings: true -->
<div id="multicam_container">
    <div id="webcam_img_container" tabindex="0">
        <div class="nowebcam" data-bind="visible: !WebCamSettings.webcamLoaded()">
            <div class="text webcam_loading" data-bind="visible: !WebCamSettings.webcamLoaded() && !WebCamSettings.webcamError()">
                <p><strong>{{ _('Webcam stream loading...') }}</strong></p>
            </div>
            <div class="text webcam_error" data-bind="visible: !WebCamSettings.webcamLoaded() && WebCamSettings.webcamError()">
                <p><strong>{{ _('Webcam stream not loaded') }}</strong></p>
                <p><small>{{ _('It might not be configured correctly or require authentication. You can change the URL of the stream under "Settings" > "Classic Webcam" > "Stream URL". If you don\'t have a webcam you can also just disable webcam support there.') }}</small></p>
                <p><small>{{ _('Currently configured stream URL') }}: <a target="_blank" rel="noreferrer" data-bind="attr: {href: WebCamSettings.streamUrl}, text: WebCamSettings.streamUrl"></a></small></p>
            </div>
        </div>
        <div id="webcam_rotator" data-bind="css: { webcam_rotated: WebCamSettings.webcam_rotate90(), webcam_unrotated: !WebCamSettings.webcam_rotate90() }">
            <div class="webcam_fixed_ratio" data-bind="css: WebCamSettings.webcamRatioClass">
                <div class="webcam_fixed_ratio_inner">
                    <img id="webcam_image" data-bind="css: { flipH: WebCamSettings.webcam_flipH(), flipV: WebCamSettings.webcam_flipV() }, event: { load: onWebcamLoad, error: onWebcamError }, visible: !WebCamSettings.webcamError()">
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /ko -->